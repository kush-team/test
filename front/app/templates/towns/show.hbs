<div class="nav-wrap">
	<ul>
		{{#each session.user.towns as |town|}}
			<li>
				{{#link-to 'towns.show' town.id}}
					{{town.name}}
				{{/link-to}}
			</li>
		{{/each}}
	</ul>
</div>

<div class="main-content-wrap">

	<h2>{{model.town.name}}</h2>

	<div class="newbie-container">
		<h3>
			Ãšltimos afiliados cargados

			<span>{{meta.total}} Fichas / {{meta.aprobed}} Aprobadas</span>
		</h3>
		<ul class="newbie-list">

			{{#each model.newbies as |newby|}}
				{{#if newby.voter.matricula}}
					<li> 
						<div class="content">
							<div class="header">{{newby.voter.matricula}}</div>
							<div class="description">{{newby.voter.nombre}} {{newby.voter.apellido}}</div>
						</div>
						<div class="last-item">
							<div class="badge afiliado-{{newby.voter.afiliado}}">&nbsp;</div>
						</div>
					</li>
				{{else}}
					<li class="fullfilled" >
						<div class="content">
							<span>&nbsp;</span>
						</div>
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>